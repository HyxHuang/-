.box .box-lg{
  width:674rpx;
  height: 1060rpx;
  background:#fff;
  margin:0 auto;
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 84rpx 40rpx 0;
  box-shadow: 1px 1px 10px #f0f0f0;
}
.label-txt{
  font-size: 24rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  line-height: 60rpx;
}

.box-lg input{
  background:#f4f6ff;
  height: 100rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
}
button{
  margin-top: 40rpx;
  background:#1c66ff;
  color: #fff;
  border-radius: 0;
  font-size: 32rpx;
}
.rg-success{
  background:green;
}
.rg-fail{
  background:red;
}
.tz-lg{
  color: #666;
