.dialog-wrap{
  position: absolute;
  width:100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(102, 102, 102, .6);
  z-index: 10;
  
}
.scroll{
  background-color: #fff;
}
.dialog{
  height: fit-content;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background-color: #fff;
  width: 90%;
  z-index: 11;
}
.dialog >view:first-child{
  height: 90rpx;
  background-color: #f5f8ff;
  color: #6e6f71;
  font-size: 28rpx;
  line-height: 90rpx;
  padding-left: 30rpx;
}
checkbox-group{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 30rpx;
  height: 400rpx;
}
.items{
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}
.items image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin:0 20rpx;
}
.items text{
  color: #666;
}
.save{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.save text{
  display: block;
  background-color: #2046ef;
  color: #fff;
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 50rpx;

}