page{
  height: 100%;
}
.wrap{
  box-sizing: border-box;
  height: 100%;
  background-color:#F5F8FF;
  padding:32rpx 32rpx 0 32rpx;
}

.top-wrap{
  width: 100%;
  height: 348rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.mess,.position{
  padding: 30rpx 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mess >view:first-child,
.position >view:first-child
{
  color: #464646;
  font-weight: 600;
}
.mess view:last-child{
  color:#6b6b6b;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}
.position{
  padding: 0 28rpx;
  
}
.position >view:first-child{
  font-weight: normal;
  font-size: 28rpx;
}
.position >view:last-child{
  height: 45rpx;
  background-color: #dae6ff;
  display: flex;
  align-items: center;
  padding:12rpx;
  font-size: 24rpx;
  color: #464646;
  border-radius: 5rpx;
}
.date{
  padding: 0 22rpx;
}
.date-swiper{
  margin-top: 28rpx;
}
.scroll-view_H{
  white-space: nowrap; 
}
.date-item{
  display: inline-block;
  height: 150rpx;
}
.date-item view{
  height: 75rpx;
  width: 68rpx;
  line-height: 75rpx;
  text-align: center;
  font-size: 24rpx;
  

}
.date-item >view:first-child{
  background-color: #4984ff;
  color: #fff;
}
.icon-dui{
  color: #44a20c;
}
.icon-cuowu{
  color: red;
}
.icon-wenhao{
  color:#FFCA28;
}


